@model EmployeeEditViewModel

@{
    ViewBag.Title = "Edit Employee";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "emp.jpg");
}

    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post" class="mt-3">
        <div class="row m-2">
            <input hidden asp-for="Id" />
            <input hidden asp-for="ExistingPhotoPath" />
            <label asp-for="Name" class="col-sm-2  col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <label asp-for="Department" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="Department" class="form-select" asp-items="Html.GetEnumSelectList<Dept>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="Photo" class="form-control" />
            </div>
            <!--the photo Data type is IFormFile no need to specify the file upload control-->
        </div>

        <img style="height:200px; width:auto" class="card-img" src="@photoPath" asp-append-version="true" />

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row col-sm-10 m-2">
            <div class="col-sm-1"><button type="submit" class="btn btn-primary">Update</button></div>
            <div class="col-sm-1"><a asp-controller="Home" asp-action="index" class="btn btn-primary">Cancel</a></div>
        </div>
    </form>