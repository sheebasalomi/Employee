@model IEnumerable<Employee>
   @{ 
       //Layout = "_Layout2"; Layout = null // if we do this the view statrt file in the directory will override
       ViewBag.Title = "Employee List";
   }
        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Name</td>
                    <td>Department</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                { 
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Department</td>
                </tr>
                }
            </tbody>

        </table>
  